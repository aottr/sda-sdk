{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "declaration": true,
        "outDir": "./lib",
        "strict": true,
        "moduleResolution": "node",
        "noUnusedParameters": true,
        "noImplicitReturns": true,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}